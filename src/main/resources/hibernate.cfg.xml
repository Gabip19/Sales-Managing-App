<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name="hibernate.dialect"> org.hibernate.dialect.PostgreSQLDialect </property>
        <property name="hibernate.connection.driver_class"> org.postgresql.Driver </property>
        <property name="hibernate.connection.url"> jdbc:postgresql://192.168.0.150:5432/SalesManagingApp </property>
        <property name="hibernate.connection.username"> postgres </property>
        <property name="hibernate.connection.password"> postgres </property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql"> true </property>
        <property name="format_sql"> true </property>

        <!-- List of XML mapping files -->
        <mapping class="salesapp.domain.User"/>
        <mapping class="salesapp.domain.Product"/>
        <mapping class="salesapp.domain.Order"/>
        <mapping class="salesapp.domain.OrderItem"/>

    </session-factory>
</hibernate-configuration>